<h1 class="mb-4">Manage Books</h1>
<div class="card">
  <div class="card-header bg-info text-white">
    <h3 class="m-0">Books List</h3>
  </div>
  <div class="card-body">
    <% if (books.length > 0) { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Book ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Date of Issue</th>
          <th>Due Date</th>
          <th>Return Date</th>
          <th>Fine</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
        <tr>
          <td><%= book.book_id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.checkout_date %></td>
          <td><%= book.due_date %></td>
          <td><%= book.return_date %></td>
          <td><%= book.fine %></td>
          <td>
            <form
              method="POST"
              action="/api/user/checkin/<%=book.book_id %>?_method=POST"
              style="display: inline"
            >
              <button type="submit" class="btn btn-sm btn-outline-info">Check In</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <div class="alert alert-warning" role="alert">
      No books available.
    </div>
    <% } %>
  </div>
</div>
